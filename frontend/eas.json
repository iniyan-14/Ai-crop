{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "development": {
      "workflow": "managed",
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "workflow": "managed",
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "workflow": "managed",
      "android": {
        "buildType": "app-bundle"
      },
      "env": {
        "EXPO_PUBLIC_BACKEND_URL": "https://your-production-backend.example.com"
      }
    }
  }
}
